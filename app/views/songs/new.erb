<form action="/songs" method="POST">

  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="Name">

  <br></br>

  <%Genre.all.each do |x|%>
    <input type="checkbox" name="song[genre_id][]" id="<%=x.name%>" value="<%=x.id%>"><%=x.name%></input>
  <%end%>

  <label>and/or, create a new artist:</label>

  <br></br>

  <label>artist name:</label>

  <input type="text" id="Artist Name" name="artist[name]"></input>

  <br></br>

  <input type="submit" value="Create">

</form>
